<% if(restaurants.length > 0) { %>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Description</th>
      <th>Lat</th>
      <th>Lng</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% restaurants.forEach((restaurant) => { %>
      <tr>
        <td>
          <img src="/restaurants/<%= restaurant._id %>/pic">
        </td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.description %></td>
        <td><%= restaurant.location.coordinates[0] %></td>
        <td><%= restaurant.location.coordinates[1] %></td>
        <td>
          <form action="/restaurants/<%= restaurant._id %>/delete" method="post">
            <input type="submit" value="Delete" class="Delete">
          </form>
        </td>
      </tr>


      <script type="text/javascript">
        setTimeout(function() {
          new google.maps.Marker({
            position: {
              lat: <%= restaurant.location.coordinates[0] %>,
              lng: <%= restaurant.location.coordinates[1] %>
            },
            map: map
          });
        }, 2000)
      </script>
    <% }) %>
  </tbody>
</table>

<% } else { %>
  <div class="alert alert-warning" role="alert">No restaurants!</div>
<% } %>